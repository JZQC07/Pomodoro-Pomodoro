@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div style="text-align:center">
    <h1 class="display-4">Welcome To The Doers Pomodoro App</h1>
</div>

        
  
<div id="pomodoro-app">
  <div id="container">
    <div id="timer">
      <div id="time">
        <span id="minutes">25</span>
        <span id="colon">:</span>
        <span id="seconds">00</span>
      </div>
      <div id="filler"></div>
    </div>


    <div id="buttons">
      <button id="work">Work</button>
      <button id="shortBreak">Short Break</button>
      <button id="longBreak">Long Break</button>
      <button id="stop">Stop</button>
    </div>
  </div>
</div>


<div id="buttons">
<div id="container2">

<span style=center>
<button id="button1">Show ToDo-list</button>
</span>

<span styles=center>
<button id="button2">Add to ToDo-list</button>
</span>

<span style="center">
<button id="button3">Remove from ToDo-list</button>
</span>


<span style=float right align="right">
<button id="button4">Add to finished activity</button>
</span>



<span style=float right align="right">
<button id="button5">Show finished activities</button>
</span>

</div>
